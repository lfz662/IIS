@model Umbraco.Forms.Mvc.Models.FieldViewModel

@{
    var checkboxChecked = (Model.ContainsValue(true) || Model.ContainsValue("true") || Model.ContainsValue("on")) ? "on" : "off";
    Html.AddFormThemeScriptFile(null, "~/App_Plugins/UmbracoForms/Assets/mvc/checkbox.js");
}

<input type="hidden" id="@Model.Id" name="@Model.Name" value="@checkboxChecked" />

<input type="checkbox" class="@Html.GetFormFieldClass(Model.FieldTypeName)" id="ftCheckbox_@Model.Id" name="@Model.Name" onclick="toggleCheckbox(this)"
       @if (Model.Mandatory) { <text> data-val="true" data-val-requiredcb="@Model.RequiredErrorMessage" </text> }
       @if (checkboxChecked == "on") { <text> checked="checked" </text> } /> 